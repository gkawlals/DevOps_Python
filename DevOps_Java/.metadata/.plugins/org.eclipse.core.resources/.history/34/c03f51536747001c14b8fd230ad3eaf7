package class_method;

public class GradeMain {

	public static void main(String[] args) {
		int tot = 0;
		Grade_input input = new Grade_input();
		for (int i = 0; i < 3; i++) {
			System.out.println(i + "과목의 성적을 입력하세요");
			
			tot += input.Input();	
		}
		int avg = tot / 3; 
		System.out.println("성적의  평균 :" + avg);
		input.grade(tot);
		

	}

}
