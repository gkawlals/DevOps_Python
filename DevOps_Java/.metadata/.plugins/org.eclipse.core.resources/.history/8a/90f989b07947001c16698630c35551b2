

package Exam03;

import java.util.Scanner;

import exam04.Calc_Main;

public class Quiz01 {   
   public static void main(String[] args) {
      Scanner sc = new Scanner(System.in);
      Quiz01_Main qm = new Quiz01_Main();
      Calc_Main cm = new Calc_Main();

      while(true) {
         System.out.println("## 메뉴 ##");
         System.out.println("1. 성적입력프로그램");
         System.out.println("2. 계산기");
         int menu = sc.nextInt();
         switch(menu) {
         case 1:
            qm.run();
            break;
         case 2:
            cm.run();
         }
      }
   }
}