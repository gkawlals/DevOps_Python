package exam03;

import java.util.Scanner;

public class Quiz01_Run {
   Scanner sc = new Scanner(System.in);
   
   public int menu() {
      System.out.println("=== 메뉴 ===");
      System.out.println("1. 입력");
      System.out.println("2. 출력");
      System.out.println("3. 수정");
      System.out.println("0. 종료");
      System.out.print("입력 : ");
      return sc.nextInt();
   }
   
}