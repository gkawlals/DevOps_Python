<script type="text/javascript">

	window.onload = function(){
		
		var sel = document.frm.chooseSite; // select태그
		sel.onchange = showSite;
		
		function showSite(){
			var winObj = window.open("", "newWin");
			var selectSite = document.getElementByname('select').val
			var idx = document.frm.chooseSite.selectedIndex;
			if (idx == '다음'){
			 opener.location.href = "http://www.daum.net";break;
			 document.write(selectSite);
		   
			}else if ( idx == '네이버'){
				opener.location = "http://www.naver.com";break;
				 document.write(selectSite);
			}else if (idx == '네이트'){
				
			    opener.idx = "http://www.nate.com";break;
			    document.write(selectSite);
			}else {
				alert('알수없는 에러 ');
			}
			
		}
		
		
	}

</script>
