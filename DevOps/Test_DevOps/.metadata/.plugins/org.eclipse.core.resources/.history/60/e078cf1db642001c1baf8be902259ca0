	<script>
	// 글로벌 변수와 지역변수
/* 	var scope = '글로벌 변수';
	function getValue(){
		
		var scope = '지역변수';
		return scope;
	} */
	
	scope = '글로벌 변수';
	function getValue(){
		
		scope = '지역변수';
		return scope;
	}
	
	document.writeln('1>' + getValue() + '<br/>');
	document.writeln('2>' + scope); // var 명령어를 사용하지 않으면 글로벌 변수로 취급 
	
	// 지역변수는 함수의 맨위에 선언하자. 
	// 자바스크립트의 지역변수는 함수 전체에서 유효하기 때문에 지역변수로 유효하지만 값이 정해지지 않기 때문에 undifined가 됨 

	</script>
