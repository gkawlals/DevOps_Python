// 1. 자바스크립트의 데이터 타입에 관대하다. (값이 초기화될때 타입이 결정된다.)
	var byensu = '문자열'; // 문자열이 아닌 함수가 들어갈 수 있다. var를 선언해야 전역변수로써 사용이 가능하다
	document.writeln("변수의 값 " + byensu + "<br/>");
	
	byensu = 10000;
	document.writeln("변수의 값 " + byensu + "<br/>");
